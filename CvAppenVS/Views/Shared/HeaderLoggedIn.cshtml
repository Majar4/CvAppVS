<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm header header-loggedin">
		<div class="container-fluid">

			@* VÄNSTER SIDA *@
			<div class="d-flex flex-column align-items-start">
				<a class="navbar-brand mb-0 pb-0" asp-controller="Home" asp-action="Index">
					Cv-siten
				</a>
				<span class="text-muted" style="font-size: 0.8rem; margin-top: -5px;">
					Inloggad som: <strong>@User.Identity.Name</strong>
				</span>
			</div>

			@* HÖGER SIDA *@
			<div class="ms-auto d-flex align-items-center gap-4">
				@* Sök-funktion *@
					<form asp-controller="Profile" asp-action="Search" method="get" class="d-flex align-items-center mb-0">
						<input type="text" name="searchString" class="form-control form-control-sm me-1" placeholder="Sök..." style="width: 120px; height: 30px;">
						<button type="submit" class="btn btn-link p-0 d-flex flex-column align-items-center text-decoration-none" style="color: inherit;">
							<svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#324B4E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<circle cx="11" cy="11" r="8"></circle>
								<line x1="21" y1="21" x2="16.65" y2="16.65"></line>
							</svg>
							<span class="icon-label" style="font-size: 0.7rem;">Sök</span>
						</button>
					</form>

				@* Meddelande-ikon *@
			<a class="nav-link d-flex flex-column align-items-center position-relative p-0" asp-controller="Message" asp-action="Index">
				<svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#324B4E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<rect x="3" y="5" width="18" height="14" rx="2" ry="2"></rect>
					<polyline points="3 5 12 13 21 5"></polyline>
				</svg>
				<span class="icon-label mt-1">Meddelanden</span>
					@await Component.InvokeAsync("MessageBadge")	
				</a>

				@* Profil-ikon *@
			<a class="nav-link d-flex flex-column align-items-center p-0" asp-controller="Profile" asp-action="Index">
					<svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#324B4E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="12" cy="8" r="4"></circle>
						<path d="M6 20c0-3.31 2.69-6 6-6s6 2.69 6 6"></path>
					</svg>
					<span class="icon-label mt-1">Profil</span>
				</a>

@* 					<button class="btn accordion" style="color: #324B4E; font-size: 1.5rem;">
						☰
					</button> *@
				
					<div class="hamburger-container">
						<input type="checkbox" id="menu-toggle" />
						<label for="menu-toggle" id="menu-icon">&#9776;</label>

						<ul class="hamburger-menu">
							<li class="nav-item">
								<a asp-controller="Home" asp-action="Index" class="menu-item">
									Startsida
								</a>
							</li>

							<li class="nav-item">
								<a asp-controller="Project" asp-action="Index" class="menu-item">
									Projekt
								</a>	
							</li>
							<li>
								<a asp-controller="Account" asp-action="Settings" class="menu-item">
									Inställningar
								</a>
							</li>

							<li>
								<form asp-controller="Account" asp-action="Logout" method="post">
									<button type="submit" class="menu-item">
										Logga ut
									</button>
								</form>
							</li>
						</ul>
					</div>

			</div>
		</div>
		</div>
	</nav>
</header>