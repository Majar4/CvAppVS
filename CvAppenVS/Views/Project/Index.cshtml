@using System.Security.Claims @*Behövs för att kunna hämta inloggad användares ID i vyn*@

@model List<Project>

@{
    ViewBag.Title = "Projekt";
}

<h1>Projekt</h1>

<div class="mb-3">
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" class="btn btn-dark btn-sm">Skapa nytt projekt</a>
    }

    <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-secondary btn-sm ms-2">Tillbaka till Profil</a>
</div>



@foreach (var project in Model)
{
    <h2>@project.Title</h2>
    <p>@project.Description</p>
  @*   <p><b>Från:</b>@project.FromDate.Value.ToShortDateString()</p> //säkra upp för ev. nullvärde på datum
    <p><b>Till:</b>@project.ToDate.Value.ToShortDateString()</p> *@

    <b>Deltagare:</b>
    <ul>
        @foreach (var up in project.UserProjects)
        {
            if (!up.User.IsPrivate || User.Identity.IsAuthenticated)
            {
                <li>@up.User.Name</li>
            }
        }
    </ul>

    @if (User.Identity.IsAuthenticated && !project.UserProjects.Any(up => up.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))) @* Knapp för att gå med i projekt, inloggade användare och om inte redan med *@
    {
        <a asp-action="Join" asp-route-projectId="@project.Id" class="btn btn-dark btn-sm">Gå med i projektet</a>
    }

    @* Knapp för att redigera *@

    @if (User.Identity.IsAuthenticated && project.CreatedByUserId == User.FindFirstValue(ClaimTypes.NameIdentifier)) @* Måste vara inloggad + den som skapade projektet = visar knappen*@
    {
        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-dark btn-sm">Redigera</a>
    }

}