@model CvAppen.Data.Project
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<h2 class="mb-4">Redigera projekt</h2>

<form asp-action="Edit" method="post" class="col-md-6">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Titel</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Beskrivning</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Från</label>
        <input asp-for="FromDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Till</label>
        <input asp-for="ToDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-dark btn-sm">Spara</button>

    <a asp-action="Index" class="btn btn-outline-secondary btn-sm ms-2">Tillbaka</a>

</form>