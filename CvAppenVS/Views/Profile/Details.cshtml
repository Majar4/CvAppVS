@model MyProfileViewModel
@using CvAppen.Web.ViewModels

@{ ViewData["Title"] = @Model.Name; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-normal">@Model.Name</h1>
        
        <div class="d-flex gap-2">
            @* Meddelandeknapp *@
            <a asp-controller="Message" asp-action="Add" asp-route-toUserId="@Model.UserId" 
               class="btn btn-dark rounded-pill px-4 shadow-sm">Meddelande</a>
            
            @if (Model.CV != null) {
                <a asp-controller="Cv" asp-action="Show" asp-route-id="@Model.CV.Id" 
                   class="btn btn-outline-dark rounded-pill px-4 shadow-sm">Visa fullständigt CV</a>
            }
        </div>
    </div>

    @await Html.PartialAsync("_profilePartial", Model)
</div>

@if (Model.SimilarProfiles.Any())
{
    <div class="mt-5">
        <h4>Liknande profiler</h4>
        <div class="row">
            @foreach (var similar in Model.SimilarProfiles)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">

                            @if (!string.IsNullOrEmpty(similar.Image))
                            {
                                <img src="~/images/@similar.Image" class="rounded-circle mb-2" style="width: 60px; height: 60px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center mx-auto mb-2" style="width: 60px; height: 60px;">
                                    @similar.Name.Substring(0, 1)
                                </div>
                            }

                            <h6 class="card-title">@similar.Name</h6>

                            <a asp-controller="Profile" asp-action="Details" asp-route-id="@similar.Id" class="btn btn-sm btn-outline-primary stretched-link">
                                Visa profil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}