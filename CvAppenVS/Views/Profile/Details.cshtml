@model CvAppen.Web.ViewModels.MyProfileViewModel

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Profil: @Model.Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4>Om @Model.Name</h4>
                    <p>Här kan du se @Model.Name's profil och projekt.</p>

                    <div class="mt-4">
                        @if (Model.CVId != null)
                        {
                            <a asp-controller="Cv" 
                            asp-action="ViewCv" 
                            asp-route-id="@Model.CVId" class="btn btn-success">
                                Se fullständigt CV
                            </a>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inget CV publicerat</span>
                        }

                        @* Knapp för att skicka meddelande *@
                        <a asp-controller="Message" 
                        asp-action="Send" 
                        asp-route-receiverId="@Context.Request.RouteValues["id"]" class="btn btn-outline-primary ms-2">
                            Skicka ett meddelande
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Search" 
            asp-route-searchString="@Context.Request.Query["searchString"]" class="btn btn-link">
                &larr; Tillbaka till sökresultat
            </a>
        </div>
    </div>
</div>
