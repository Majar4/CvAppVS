@model CvAppen.Web.ViewModels.MyProfileViewModel

@* 
lägg in User-info som inte är kopplat till CV*@

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Profil: @Model.Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4>Om @Model.Name</h4>
                    <p>Här kan du se @Model.Name's profil och projekt.</p>

                    <div class="mt-4">

                        @if (Model.CV == null)
                        {
                            <div class="alert alert-info">
                                Inget CV publicerat ännu.
                            </div>

                        }

                        else
                        {
                            <div class="profile-cv">
                                <h2>CV</h2>
                                @Html.PartialAsync("_CvPartial", Model.CV)
                            </div>

                        }

                        @* Knapp för att skicka meddelande *@
                        <a asp-controller="Message" 
                        asp-action="Add" 
                        asp-route-receiverId="@Context.Request.RouteValues["id"]" class="btn btn-outline-primary ms-2">
                            Skicka ett meddelande
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Search" 
            asp-route-searchString="@Context.Request.Query["searchString"]" class="btn btn-link">
                &larr; Tillbaka till sökresultat
            </a>
        </div>
    </div>
</div>
